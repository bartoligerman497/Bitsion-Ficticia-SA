@using Bitsion_Ficticia_S.A.Models.Cliente
@using Bitsion_Ficticia_S.A.Models.DTO
@model DTOModel;

@using System.Web;
@using System;
@using System.Collections.Generic;
@using System.Data;

@{
    if (Model.Cliente.IdCliente == 0)
    {
        ViewData["Title"] = "Crear Cliente";
    }
    else
    {
        ViewData["Title"] = "Editar Cliente";
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="note">
    <p>
        @*@(Model.Cliente.IdCliente == 0 ? "Crear" : "Editar")  un Cliente*@
</div>
<ul class="nav nav-tabs" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active text-red-1" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-datos-generales" type="button" role="tab" aria-controls="pills-home" aria-selected="true">
            Datos Personales
        </button>
    </li>
</ul>
<form action="/Cliente/AltaCliente"
      method="POST"
      id="guardar"
      onsubmit="return Validaciones()">

    <div class="tab-content" id="pills-tabContent" style="background-color:white;">

        <div class="tab-pane fade show active" id="pills-datos-generales" role="tabpanel" aria-labelledby="pills-home-tab">
            <div class="form-content bk mt-3">

                @if (@Model.Cliente is null || Model.Cliente.IdCliente == 0)
                {
                    <input type="text"
                           class="form-control bk"
                           id="idCliente"
                           asp-for="Cliente.IdCliente"
                           hidden=""
                           value="0">
                }
                else
                {
                    <input type="text"
                           class="form-control bk"
                           id="idCliente"
                           asp-for="Cliente.IdCliente"
                           hidden=""
                           value="@Model.Cliente.IdCliente">
                }

                <fieldset class="scheduler-border" id="datos-personales">
                    <legend class="scheduler-border text-red-1">Datos Personales</legend>
                    <div class="row">
                        <div class="col-sm-5">
                            <label for="nombre">Nombre</label>
                            <input type="text"
                                   asp-for="Cliente.Nombre"
                                   class="form-control bk"
                                   id="nombre"
                                   title="Todos los nombres del cliente"
                                   placeholder="Ingrese su nombre"
                                   value="@Model.Cliente.Nombre"
                                   readonly>
                        </div>
                        <div class="col-sm-5">
                            <label for="apellido">Apellido</label>
                            <input type="text"
                                   class="form-control bk"
                                   asp-for="Cliente.Apellido"
                                   id="apellido"
                                   title="Todos los apellidos del cliente"
                                   placeholder="Ingrese su apellido"
                                   value="@Model.Cliente.Apellido"
                                   readonly>
                        </div>
                        <div class="col-sm-2">
                            <label for="sexo">Genero</label>
                            @if (@Model.Cliente.IdCliente == 0)
                            {
                                <select id="sexo"
                                        class="form-select bk"
                                        title="Sexo correspondiente, Masculino o Femenino"
                                        asp-for="Cliente.Genero.IdGenero"
                                        disabled>
                                    @foreach (GeneroModel genero in ViewBag.Generos)
                                    {
                                        <option value="@genero.IdGenero">
                                            @genero.Descripcion
                                        </option>
                                    }
                                </select>
                            }
                            else
                            {
                                <select id="sexo"
                                        class="form-select bk"
                                        title="Sexo correspondiente, Masculino o Femenino"
                                        asp-for="Cliente.Genero.IdGenero"
                                        disabled>
                                    @foreach (GeneroModel genero in ViewBag.Generos)
                                    {
                                        @if (Model.Cliente.Genero.IdGenero == genero.IdGenero)
                                        {
                                            <option value="@genero.IdGenero"
                                                    selected>
                                                @genero.Descripcion
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@genero.IdGenero">
                                                @genero.Descripcion
                                            </option>
                                        }
                                    }
                                </select>
                            }
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-3">
                            <label for="dni">D.N.I</label>
                            <input type="number"
                                   class="form-control bk"
                                   id="dni"
                                   asp-for="Cliente.Dni"
                                   title="Número de DNI único"
                                   placeholder="Numero dni"
                                   value="@Model.Cliente.Dni"
                                   readonly />
                        </div>
                        <div class="col-sm-3">
                            <label for="edad">Edad</label>
                            <input type="number"
                                   class="form-control bk"
                                   id="edad"
                                   asp-for="Cliente.Edad"
                                   title="Edad"
                                   placeholder="Edad"
                                   value="@Model.Cliente.Edad"
                                   readonly />
                        </div>
                    </div>
                </fieldset>

                <br />

                <fieldset class="scheduler-border" id="datos-personales">
                    <legend class="scheduler-border text-red-1">Datos Adicionales</legend>
                    <div class="row">

                        <div class="col-sm-2">
                            <label for="maneja">Maneja?</label>
                            @if (@Model.Cliente.IdCliente == 0)
                            {
                                <select id="maneja"
                                        class="form-select bk"
                                        title="Maneja"
                                        asp-for="Cliente.Maneja"
                                        disabled>
                                    <option value="true">
                                        Si
                                    </option>
                                    <option value="false" selected>
                                        No
                                    </option>
                                </select>
                            }
                            else
                            {
                                <select id="maneja"
                                        class="form-select bk"
                                        title="Maneja"
                                        asp-for="Cliente.Maneja"
                                        disabled>
                                    @if (Model.Cliente.Maneja == true)
                                    {
                                        <option value="1"
                                                selected>
                                            Si
                                        </option>
                                        <option value="0">
                                            No
                                        </option>
                                    }
                                    else
                                    {
                                        <option value="true">
                                            Si
                                        </option>
                                        <option value="false" selected>
                                            No
                                        </option>
                                    }
                                </select>
                            }
                        </div>

                        <div class="col-sm-2">
                            <label for="lentes">Usa Lentes?</label>
                            @if (@Model.Cliente.IdCliente == 0)
                            {
                                <select id="lentes"
                                        class="form-select bk"
                                        title="Usa Lentes"
                                        asp-for="Cliente.UsaLentes"
                                        disabled>
                                    <option value="true">
                                        Si
                                    </option>
                                    <option value="false" selected>
                                        No
                                    </option>
                                </select>
                            }
                            else
                            {
                                <select id="lentes"
                                        class="form-select bk"
                                        title="lentes"
                                        asp-for="Cliente.UsaLentes"
                                        disabled>
                                    @if (Model.Cliente.UsaLentes == true)
                                    {
                                        <option value="true"
                                                selected>
                                            Si
                                        </option>
                                        <option value="false">
                                            No
                                        </option>
                                    }
                                    else
                                    {
                                        <option value="true">
                                            Si
                                        </option>
                                        <option value="false" selected>
                                            No
                                        </option>
                                    }
                                </select>
                            }
                        </div>

                        <div class="col-sm-2">
                            <label for="diabetico">Diabetico?</label>
                            @if (@Model.Cliente.IdCliente == 0)
                            {
                                <select id="diabetico"
                                        class="form-select bk"
                                        title="diabetico"
                                        asp-for="Cliente.Diabetico"
                                        disabled>
                                    <option value="true">
                                        Si
                                    </option>
                                    <option value="false" selected>
                                        No
                                    </option>
                                </select>
                            }
                            else
                            {
                                <select id="diabetico"
                                        class="form-select bk"
                                        title="diabetico"
                                        asp-for="Cliente.Diabetico"
                                        disabled>
                                    @if (Model.Cliente.Diabetico == true)
                                    {
                                        <option value="true" selected>
                                            Si
                                        </option>
                                        <option value="false">
                                            No
                                        </option>
                                    }
                                    else
                                    {
                                        <option value="true">
                                            Si
                                        </option>
                                        <option value="false" selected>
                                            No
                                        </option>
                                    }
                                </select>
                            }
                        </div>

                        <div class="col-sm-6">
                            <center>
                                <label for="enfermedades">
                                    Padece alguna enfermedad?
                                </label>
                            </center>
                            <textarea asp-for="Cliente.Enfermedades"
                                      value="@Model.Cliente.Enfermedades"
                                      title="Enfermedades"
                                      id="enfermedades"
                                      class="form-control bk"
                                      style="text-align: center"
                                      readonly>
                    </textarea>
                        </div>
                    </div>
                </fieldset>

                <br />
                <br />

                <a href="/Cliente/AltaCliente?idCliente=@Model.Cliente.IdCliente"
                   class="btn btn-warning text-white btn-gral"
                   title="Botón de editar los datos del cliente">
                    Editar
                </a>

                <a href="/Cliente/ListadoClientes/"
                   class="btn btn-dark text-white"
                   style="margin-left:5px;"
                   title="Vuelve a la página donde se encuentra el listado de todos los clientes">
                    Volver al listado de Clientes
                </a>

                <br />
                <br />

                <br />
            </div>
        </div>
    </div>
</form>

<script src="~/js/validaciones.js" type="text/javascript" charset="UTF-8" asp-append-version="true"></script>